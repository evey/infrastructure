# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_USER_PASSWORD=your_secure_user_password_here

# Nawel JWT Secret (minimum 32 caractères)
NAWEL_JWT_SECRET=your_super_secret_jwt_key_for_nawel_minimum_32_characters

# Menus JWT Secret (minimum 32 caractères)
MENUS_JWT_SECRET=your_super_secret_jwt_key_for_menus_minimum_32_characters

# Nawel - OpenGraph API (optionnel - pour extraction d'infos produits)
# Obtenir une clé sur https://www.opengraph.io/
OPENGRAPH_API_KEY=your-opengraph-api-key-here

# Nawel - Email Configuration (optionnel)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=no-reply@nawel.com
SMTP_FROM_NAME=Nawel - Listes de Noël
SMTP_USE_SSL=true
